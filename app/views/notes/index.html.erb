<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Student name</th>
      <th>Student number</th>
      <th>Student grade</th>
      <th>Student class</th>
      <th>Title</th>
      <th>Body</th>
      <th>Image File Name</th>
      <th>Observed at</th>
      <th>Weather</th>
      <th>Event name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.student_name %></td>
        <td><%= note.student_number %></td>
        <td><%= note.student_grade %></td>
        <td><%= note.student_class %></td>
        <td><%= note.title %></td>
        <td><%= note.body %></td>
        <td><%= note.image_file_name %></td>
        <td><%= note.observed_at %></td>
        <td><%= note.weather %></td>
        <td><%= note.event_name %></td>
        <td><%= note.latitude %></td>
        <td><%= note.longitude %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
