<script>
var MAPRAMBLE = {};
<% if edit_mode? %>
MAPRAMBLE.mode = 'edit';
<% else %>
MAPRAMBLE.mode = 'view';
<% end %>
MAPRAMBLE.notes = [];
<% if @notes.present? %>
  <% @notes.each do |note| %>
MAPRAMBLE.notes.push(
    <%=raw note.to_json %>
);
  <% end %>
MAPRAMBLE.bounds = new google.maps.LatLngBounds(
    new google.maps.LatLng(<%= @lat_min %>, <%= @lng_min %>),
    new google.maps.LatLng(<%= @lat_max %>, <%= @lng_max %>)
);
<% end %>
</script>
<script src="/javascripts/mapRamble.js"></script>

<div id="main">
  <div id="map">
  </div>
  <div id="info">
    <% @notes.each do |note| %>
      <%= render note %>
      <hr>
    <% end %>
  </div>
</div>
<div class="thumb-wrapper">
  <ul id="thumb">
  </ul>
  <div class="carouPrev"></div>
  <div class="carouNext"></div>
</div>
